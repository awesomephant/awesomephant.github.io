---
layout: base
class: post
---

<aside class="post-meta">
	<span class="post-section post-meta-item">
		{% if tags %}
		{% assign t = tags | first %}
		{% if t == "post" %}
		Writing
		{% else %}
		{{t | capitalize}}
		{% endif %}
		{% else %}
		<a href="/notes/">
			Lecture Notes
		</a>
		{% endif %}
	</span>
	<date class="post-date post-meta-item">
		{{ date | date: "%B %d, %Y" }}
	</date>
	<span>{{content | strip_html | wordcount}} minutes</span>
</aside>
<header class="post-header {% if intro%}has-intro{%endif%}">
	<div class='header-copy'>
		<h1 class="post-title">
			{% if external_link %}
			<a href="{{external_link}}">{{title}}</a>
			{% else %}
			{{ title }}
			{% endif %}
		</h1>
		{% if intro %}
		<div class="post-intro">
			{{ intro | markdownify}}
		</div>
		{% endif %}
	</div>
</header>
<article class='single-post {{page.class}} section-{{page.section}}'>
	<div class="post-content">
		{{ content | safe }}
	</div>
</article>
<aside class="post-footnotes"></aside>